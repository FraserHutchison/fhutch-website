.profile 
    margin-top 20px
    display flex
    flex-direction row-reverse
    
    .profile-content 
        width 50%
        margin 0 auto
        align-items center

        .profile-row
            display: flex;
            align-items: center;
        
        .profile-picture
            margin-right: 20px; /* Adjust the spacing as needed */
        
        .divider
            background $color-outline
        
        .profile-title
            text-style(heading-h1)
            margin-top 0
            margin-bottom $margin-m-0

        .profile-heading2
            text-style(heading-h2)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-heading3
            text-style(heading-h3)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-date
            text-style(post-date)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-body
            text-style(body-default)
            text-align center
            display: flex;
            flex-direction: column; /* Stack items vertically */
            align-items: center; /* Center items horizontally */
            margin: 0;
            width: 100%;

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)
            color #ffffff !important  // Ensure white color is enforced

        .profile-links-grouped a {
            display: inline-block;
            margin-top: 10px;
            margin-right: 10px;
            word-wrap break-word
            width auto         // Change from 100% to auto to only take up needed space
            max-width 90%    // Allow wrapping if content is too wide
            color #ffffff !important  // Ensure white color is enforced
        }

        .icon-github { color: #ffffff; }
        .icon-linkedin { color: #ffffff; }
        .icon-artstation { color: #ffffff; }
        
        .profile-picture 
            width: 160px;
            height: 160px;
            border-radius: 15%;
            object-fit: cover;
            margin auto
            display block
            padding 20px
            box-sizing border-radius
            
        .about-body
            width 100%

    #shaderCanvas {
        width: 100%;
        height: auto;
        max-width: 256px;
        max-height: 256px;
    }
    
    a
        underline-motion(link)
    
    // Override underline motion for outlined-box links - use same style as markdown extras
    .outlined-box a
        background-image linear-gradient(transparent, transparent), linear-gradient($color-text-primary, $color-text-primary) !important
        background-size 100% 1px, 0% 1px !important
        background-position 100% 100%, 0 100% !important
        background-repeat no-repeat, no-repeat !important
        transition background-size 0.6s linear !important
        text-decoration none !important
        
    .outlined-box a:hover
        background-size 0 1px, 100% 1px !important

.outlined-box {
    border: 3px solid $color-outline;
    background: $color-panel;
    padding: 20px;
    display: inline-block;
    border-radius: 15px;
    width: 100%;
    box-sizing: border-box;
    flex-grow: 1;
    z-index: 1;
}
    
@media (max-width: 860px)
    .profile
        flex-wrap wrap
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            margin-bottom $margin-m-1
            
        .profile-image
            width 100%
    
        .profile-row
            flex-direction column
            max-width 100%
            width auto
        
        .outlined-box
            max-width 100%