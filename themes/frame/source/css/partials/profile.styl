.profile 
    margin-top $margin-primary
    display flex
    flex-direction row-reverse
    
    .profile-content 
        width 50%
        margin 0 auto
        align-items center

        .profile-row
            display: flex;
            align-items: center;
        
        .profile-picture
            margin-right: 20px; /* Adjust the spacing as needed */
        
        .divider
            background $color-outline
        
        .profile-title
            text-style(heading-h1)
            margin-top 0
            margin-bottom $margin-m-0

        .profile-heading2
            text-style(heading-h2)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-heading3
            text-style(heading-h3)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-date
            text-style(post-date)
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-body
            text-style(body-default)
            text-align center
            display: flex;
            flex-direction: column; /* Stack items vertically */
            align-items: center; /* Center items horizontally */
            margin: 0;
            width: 100%;

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)

        .icon-github { color: #ffffff; }
        .icon-linkedin { color: #ffffff; }
        .icon-artstation { color: #ffffff; }
    
        .outlined-box {
            border: 2px solid $color-outline;
            background: $color-panel;
            padding: 20px;
            display: inline-block;
            border-radius: 15px;
            width: 100%;
            box-sizing: border-box;
            flex-grow: 1;
            z-index: 1;
        }
        
        .profile-picture 
            width: 160px;
            height: 160px;
            border-radius: 15%;
            object-fit: cover;
            margin auto
            display block
            padding 20px
            box-sizing border-radius
            
        .about-body
            width 100%

    #shaderCanvas {
        width: 100%;
        height: auto;
        max-width: 256px;
        max-height: 256px;
    }

@media (max-width: 860px)
    .profile
        flex-wrap wrap
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            
        .profile-image
            width 100%
    
        .profile-row
            flex-direction column
            max-width 100%
            width auto
        
        .outlined-box
            max-width 100%