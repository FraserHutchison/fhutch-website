.post-gallery-list
            display flex;
            flex-direction column
        
        .post-gallery-item
            border 3px solid $color-outline
            border-radius 15px
            background $color-panel
            box-sizing border-box
            padding 15px
            margin-bottom $margin-m-1
            min-height auto     // Remove fixed min-height
            max-height none     // Remove fixed max-height
            height auto         // Let height be determined by content
            border-color-motion(card)
            display flex
            flex-direction row
            align-items flex-start  // Change from center to flex-start to align to top
            justify-content space-between
            overflow hidden
            
            .post-info
                width 100%
                display flex
                position relative
                flex-direction column
                color $color-text-secondary
                justify-content flex-start  // Ensure content starts from the top
                padding-top 0  
                margin-right 50px
                margin-left 10px

                .post-date
                    text-style(post-date)
                    
                .post-title
                    margin-bottom $margin-m-1
                    color $color-hover-select
                    text-style(heading-h1)
                    //underline-motion(link)
                
            .post-img
                position relative
                width 100%
                height auto     // Let height be determined by content
                min-height 200px // Minimum height for consistency
                box-sizing border-box
                display flex
                justify-content center
                align-items center

                img
                    display block
                    width 100%
                    height auto  // Let image height be natural
                    min-height 200px
                    max-height none
                    object-fit cover
                    object-position center
                    border-radius 10px
        
@media (max-width: 860px)
    .post-gallery-item
        flex-direction column
        align-items flex-start
        overflow hidden

        .post-info
            margin-right 0
            margin-left 0
            
        .post-img
            position relative
            display block
            margin-top $margin-m-1
            text-align center

            img
                display block
                width 100%
                object-fit cover
                object-position center
    
@media (min-width: 861px) and (max-width: 1199px)
    .post-gallery-item
        align-items stretch  // Make both children stretch to same height
        
        .post-img
            position relative
            display flex
            margin-top $margin-m-1
            text-align center
            align-items center
            justify-content center
            min-height 200px  // Ensure minimum height
    
            img
                display block
                width 100%
                height auto  // Keep natural aspect ratio
                max-height 100%  // Prevent overflow
                object-fit cover
                object-position center