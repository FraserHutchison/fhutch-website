.post-gallery-list
            display grid 
            grid-template-columns repeat(2, minmax(200px, 2fr)) // Show posts in pairs of two
            gap $margin-m-1
            margin-top 20px
        
        .post-gallery-item
            display flex
            flex-direction column
            border 2px solid #333840
            border-radius 15px
            background $color-panel
            box-sizing border-box
            padding 30px
            margin-bottom $margin-m-1
            border-color-motion(card)
        
            .post-info
                margin-right $margin-l-0
                width 100%
                display flex
                flex-direction column

                .post-date
                    text-style(post-date)
                    
                .post-title
                    margin-bottom $margin-m-1
                    color $color-hover-select
                    text-style(heading-h1)
                    //underline-motion(link)
                
            .post-img
                width 100%
                margin-top $margin-m-1
        
            .post-img img
                width 100%
                height 100%
                object-fit cover
                border-radius 10px
        
        @media (max-width: 850px)
            .post-gallery-list
                grid-template-columns repeat(1, minmax(200px, 2fr))
