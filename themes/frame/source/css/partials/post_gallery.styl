.post-gallery-list
            display flex;
            flex-direction column
        
        .post-gallery-item
            border 3px solid $color-outline
            border-radius 15px
            background $color-panel
            box-sizing border-box
            padding 15px
            margin-bottom $margin-m-1
            min-height auto     // Remove fixed min-height
            max-height none     // Remove fixed max-height
            height auto         // Let height be determined by content
            border-color-motion(card)
            display flex
            flex-direction row
            align-items flex-start  // Change from center to flex-start to align to top
            justify-content space-between
            overflow hidden
            
            .post-info
                margin-right $margin-l-0
                margin-left $margin-m-1
                width 100%
                display flex
                flex-direction column
                color $color-text-secondary
                justify-content flex-start  // Ensure content starts from the top
                padding-top 0  // Remove any top padding

                .post-date
                    text-style(post-date)
                    
                .post-title
                    margin-bottom $margin-m-1
                    color $color-hover-select
                    text-style(heading-h1)
                    //underline-motion(link)
                
            .post-img
                position relative
                width 100%
                height auto     // Let height be determined by content
                min-height 200px // Minimum height for consistency
                box-sizing border-box
                display flex
                justify-content center
                align-items center

                img
                    display block
                    width calc(100% - 20px)
                    height auto  // Let image height be natural
                    min-height 200px
                    max-height none
                    object-fit cover
                    object-position center
                    border-radius 10px
                    margin 0 auto
        
@media (max-width: 860px)
    .post-gallery-item
        flex-direction column
        align-items flex-start
        overflow hidden
    
        .post-img
            position relative
            display block
            margin-top $margin-m-1
            box-sizing border-box
            text-align center

            img
                display block
                width calc(100% - 20px)
                margin-left auto
                margin-right auto
                object-fit cover
                object-position center
                border-radius 10px
