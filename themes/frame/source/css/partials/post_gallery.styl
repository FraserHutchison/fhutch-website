.post-gallery-list
            display grid
            grid-template-columns repeat(2, minmax(200px, 2fr))
            gap $margin-m-1
        
        .post-gallery-item
            display flex
            flex-direction column
            border 2px solid #333840
            border-radius 15px
            box-sizing border-box
            padding 30px
            margin-top $margin-primary
            margin-bottom $margin-m-1
        
            .post-info
                margin-right $margin-l-0
                width 100%
                display flex
                flex-direction column
        
                .post-title
                    margin-bottom $margin-m-1
                    text-style(heading-h1)
        
                .post-date
                    text-style(post-date)
        
            .post-img
                width 100%
                margin-top $margin-m-1
        
            .post-img img
                width 100%
                height 100%
                object-fit cover
                border-radius 10px
        
            a
                underline-motion(link)
        
        @media (max-width: 850px)
            .post-gallery-list
                grid-template-columns repeat(1, minmax(200px, 2fr))
