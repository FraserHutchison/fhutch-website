// Default image style
img
    max-width 100%
    height auto

//img:hover

img.clicked
    transition: transform 0.2s;
    position: fixed;
    object-fit: contain; /* Maintain aspect ratio */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 50%; /* Adjusted minimum width */
    min-height: 50%; /* Adjusted minimum height */
    max-width: 100vw;
    max-height: 100vh;
    pointer-events: none;
    z-index: 1;

.duplicate-image
    pointer-events none
    z-index 1
        
// Center image
.img-center
    max-width 100%
    height auto
    display block
    margin-left auto
    margin-right auto
    text-align center
    
// Left align image
.img-left
    max-width 100%
    height auto
    display block
    margin-left 0
    margin-right auto
    text-align left
    
// Right align image
.img-right
    max-width 100%
    height auto
    display block
    margin-left auto
    margin-right 0
    text-align right

// Shader canvas auto scale
#shaderCanvas {
    max-width: 100%;
    height: auto;
    display: block;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}
        
// fix 16:9 ratio
.video-container 
    width 100%
    padding-top 56.25%
    position relative

.video-container>iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

